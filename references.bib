	shorttitle = {Review article},
	title = {Review article: {Inferring} permafrost and permafrost thaw in the mountains of the {Hindu} {Kush} {Himalaya} region},
	url = {https://tc.copernicus.org/articles/11/81/2017/},
	urldate = {2022-04-07},
